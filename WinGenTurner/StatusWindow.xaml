<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WinGenTurner.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinGenTurner Status" 
        Width="320" 
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <StackPanel Margin="10">
        <!-- カメラ状態 -->
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Camera Status:" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="CameraStatusText" 
                       Text="Initializing..." 
                       Foreground="Gray"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"/>
        </StackPanel>
        
        <!-- 検出状態 -->
        <StackPanel>
            <TextBlock Text="Detection Status:" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="DetectionStatusText" 
                       Text="Waiting..." 
                       Foreground="Gray"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"/>
        </StackPanel>
    </StackPanel>
</Window>
